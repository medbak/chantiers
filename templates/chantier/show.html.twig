{% extends 'base.html.twig' %}

{% block title chantier.nom %}



{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <p></p>
            </div>
            <div class="col-md-4">
                <p></p>
            </div>
        </div>

        <p></p>

        <div class="row">
            <div class="col-md-10">
                <h2>Détails Chantier</h2>
                <table class="table table-striped table-bordered table-hover table-checkable">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Adresse</th>
                            <th>Date de début</th>
                            <th>Nombre de personne</th>
                            <th>Nombre d’heures cumulés</th>
                        </tr>
                    </thead>

                    <tbody>
                    <tr>
                        <td style="width: 50px">{{ chantier.id }}</td>
                        <td style="width: 80px">{{ chantier.nom }}</td>
                        <td style="width: 100px">{{ chantier.adresse }}</td>
                        <td style="width: 100px">{{ chantier.dateDebut |date('d-m-Y') }}</td>
                        <td style="width: 50px">{{ nombre_personne }}</td>
                        <td style="width: 100px">{{ duree }}</td>
                    </tr>

                    </tbody>

                </table>
                <div class="text-right">
                    <a href="{{ path('chantier.index')}}" class="btn btn-danger">Retour</a>
                </div>

            </div>
            <div class="col-md-4">

            </div>
        </div>

    </div>
{% endblock body %}



